<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/checkOutProductImage"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="5dp">
        </ImageView>


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/checkOutProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/checkOutProductDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description"
                android:layout_marginTop="2dp"
                android:layout_below="@id/checkOutProductName"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/checkOutProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Price"
                android:layout_below="@id/checkOutProductDescription"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/checkOutProductAmount"
                android:layout_alignBaseline="@+id/checkOutProductPrice"
                android:text="Qty."/>


            <TextView
                android:id="@+id/checkOutProductAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/checkOutProductPrice"
                android:layout_marginHorizontal="10dp"
                android:text="0"/>

            <!--
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/deleteBtn"
                            app:icon="@drawable/ic_delete"
                            app:iconPadding="0dp"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            app:iconGravity="textStart"
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/red"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="5dp"/>
                 -->

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>