<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/allOrdersOrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00000000"
                android:textColor="@color/green"
                android:layout_alignParentLeft="true"
                android:layout_marginHorizontal="10dp"/>

         <TextView
             android:id="@+id/allOrdersOrderNumber"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="00000000"
             android:textColor="@color/black"
             android:layout_alignParentRight="true"
             android:layout_marginHorizontal="10dp"/>



        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/myLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/totalItemsStatusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:layout_alignParentLeft="true"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:id="@+id/totalItemsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000000"
                android:layout_toEndOf="@+id/totalItemsStatusTitle"
                android:paddingHorizontal="5dp"
                android:background="@drawable/status_shape"/>

            <TextView
                android:id="@+id/totalItemsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:layout_toStartOf="@+id/allOrdersTotalItems" />

            <TextView
                android:id="@+id/allOrdersTotalItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:layout_toStartOf="@+id/allOrdersTotalPrice" />

            <TextView
                android:id="@+id/allOrdersTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/red"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </LinearLayout>






</androidx.cardview.widget.CardView>