                android:layout_gravity="end|bottom"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/antic"
                android:text="Total:"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/textView12"
