                android:textColor="@color/red"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView7819777"
                app:layout_constraintStart_toEndOf="@+id/textView7819777"
                app:layout_constraintTop_toTopOf="@+id/textView7819777" />

            <TextView
                android:id="@+id/customCakeDecorationsPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/antic"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView7819777"
                app:layout_constraintStart_toEndOf="@+id/textView9189776"
                app:layout_constraintTop_toTopOf="@+id/textView7819777"
                app:layout_constraintVertical_bias="0.0" />


