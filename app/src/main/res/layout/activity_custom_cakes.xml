            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutCustomCakeDecorations"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:hint="Select Decorations"
                app:layout_constraintEnd_toEndOf="@+id/textInputLayoutCustomCakeIcing"
                app:layout_constraintStart_toStartOf="@+id/textInputLayoutCustomCakeIcing"
