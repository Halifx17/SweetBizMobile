<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    app:contentPadding="5dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/allOrdersProductImage"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="5dp">
        </ImageView>


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/allOrdersProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/allOrdersProductDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="2dp"
                android:layout_below="@id/allOrdersProductName"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/allOrdersProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Price"
                android:layout_below="@id/allOrdersProductDescription"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/allOrdersProductAmount"
                android:layout_alignBaseline="@+id/allOrdersProductPrice"
                android:text="Qty."/>


            <TextView
                android:id="@+id/allOrdersProductAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/allOrdersProductPrice"
                android:layout_marginHorizontal="10dp"
                android:text="0"/>

            <!--
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/deleteBtn"
                            app:icon="@drawable/ic_delete"
                            app:iconPadding="0dp"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            app:iconGravity="textStart"
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/red"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="5dp"/>
                 -->

        </RelativeLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>